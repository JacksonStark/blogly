<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div>
        <p class="my-5">
            <strong class="block font-medium mb-1">Name:</strong>
            <%= @profile.full_name  %>
        </p>

        <p class="my-5">
            <strong class="block font-medium mb-1">Last name:</strong>
            <%= @profile.last_name %>
        </p>

        <p class="my-5">
            <strong class="block font-medium mb-1">Image url:</strong>
            <%= @profile.image_url %>
        </p>

        <p class="my-5">
            <strong class="block font-medium mb-1">Bio:</strong>
            <%= @profile.bio %>
        </p>

        <p class="my-5">
            <strong class="block font-medium mb-1">User:</strong>
            <%= @profile.user.email %>
        </p>
    </div>


    <%= link_to 'Edit', edit_profile_path(@profile), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
