<%= form_with(model: profile, class: "contents") do |form| %>
    <%= render "shared/form_errors", object: form.object %>

    <div class="flex flex-col justify-between mb-8 text-sm">
            <div data-controller="profile" class="flex mt-6 mb-1 gap-4">
                <% if profile.image_url %>
                    <%= image_tag "#{profile.image_url}", class: "rounded-full h-24 w-24", id: "profile_image_tag" %>
                <% end %>

                <div class="self-center">
                    <%= form.label "Upload Profile Image", class: "block mb-3" %>
                    <%= form.file_field "File", accept: 'image/png,image/gif,image/jpeg', class: "profile-image-uploader" %>
                    <%= form.hidden_field :image_url %>
                </div>
            </div>

            <%= form.label :first_name, class: "mt-6 mb-1" %>
            <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>

            <%= form.label :last_name, class: "mt-6 mb-1" %>
            <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>

            
            <%= form.label :bio, class: "mt-6 mb-1" %>
            <%= form.text_area :bio, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>

    </div>


    <div class="flex justify-between">
        <%= form.submit class: "btn btn--blue" %>
        <%= link_to "Cancel", articles_path, class: "btn ml-2" %>
    </div>
  </div>
<% end %>
