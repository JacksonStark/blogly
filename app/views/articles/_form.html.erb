<%= form_with(model: article, class: "contents") do |form| %>
    <%= render "shared/form_errors", object: form.object %>

    <div class="flex flex-col justify-between mb-8 text-sm">
        <%= form.label :title, "Title", class: "mt-6 mb-1" %>
        <%= form.text_field :title, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md text-sm" %>

        <%= form.label :description, "Description", class: "mt-8 mb-1" %>
        <%= form.text_area :description, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md h-20 text-sm" %>

        <%= form.label :body, "Body", class: "mt-8 mb-1" %>

        <div data-controller="tinymce">
            <%= form.text_area :body, class: "tinymce" %>
        </div>
    </div>
    <div class="flex justify-between">
        <%= form.submit class: "rounded-lg py-2 px-4 bg-blue-600 text-white inline-block font-medium cursor-pointer text-xs" %>
        <%= link_to "Back to articles", articles_path, class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium text-xs" %>
        <% if (article.persisted?) %>  
            <%= link_to "Show this article", article, class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium text-xs" %>
        <% end %>
    </div>

<% end %>
