

<div class="py-10 sm:py-10">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-y-16 gap-x-8 sm:gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2">
            <div class="lg:pr-4">
                <div class="relative overflow-hidden rounded-3xl bg-gray-900 px-6 pb-9 pt-64 shadow-2xl sm:px-12 lg:max-w-lg lg:px-8 lg:pb-8 xl:px-10 xl:pb-10">
                    <%= image_tag "#{@article.image_url}", class: "absolute inset-0 h-full w-full object-cover" %>
                </div>
            </div>
            <div class="text-base leading-7 text-gray-700 lg:max-w-lg">
                <p class="text-base font-semibold leading-7">Jackson Stark</p>
                <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= @article.title %></h1>
                <div class="max-w-xl mt-3">
                    <%= sanitize @article.body %>
                </div>
            </div>
        </div>
        <div class="flex flex-col justify-around h-full">
            <div class="flex justify-around mt-6 border-t border-gray-900/10 pt-6">
                <% if current_user %>
                    <%= link_to 'Edit this article', edit_article_path(@article), class: "btn" %>
                    <%= button_to 'Destroy this article', article_path(@article), method: :delete, class: "btn" %>
                <% end %>
                
                <%= link_to 'Back to articles', articles_path, class: "btn" %>

                <% @article.get_transitions.each do |transition| %>
                    <%= button_to transition.capitalize, transition_article_path(@article, transition: transition), method: :put, class: "btn btn--blue" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
