<div class="flex flex-col justify-around h-full p-2">
    <div>
        <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
        <% end %>
        <h1 class="text-black text-center font-bold text-4xl m-30"><%= @article.title %></h1>
    </div>

    <div class="text-black text-center text-sm">
        <%= sanitize @article.body %>
    </div>

    <div class="flex justify-around mt-2 text-xs">
        <%= link_to 'Edit this article', edit_article_path(@article), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>

        <%= button_to 'Destroy this article', article_path(@article), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>

        <%= link_to 'Back to articles', articles_path, class: "rounded-lg py-3 px-5 bg-gray-100 = font-medium" %>
    </div>
</div>
