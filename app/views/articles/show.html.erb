<div class="flex flex-col justify-around h-full p-2">
    <h1 class="text-center font-bold text-3xl m-30"><%= @article.title %></h1>
    <div class="text-black text-center text-sm"><%= sanitize @article.body %></div>
    <div class="flex justify-around mt-2">
        <% if current_user %>
            <%= link_to 'Edit this article', edit_article_path(@article), class: "btn" %>
            <%= button_to 'Destroy this article', article_path(@article), method: :delete, class: "btn" %>
        <% end %>
        
        <%= link_to 'Back to articles', articles_path, class: "btn" %>

        <% @article.get_transitions.each do |transition| %>
            <%= button_to transition.capitalize, transition_article_path(@article, transition: transition), method: :put, class: "btn btn--blue" %>
        <% end %>
    </div>
</div>
