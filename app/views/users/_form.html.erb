<%= form_with(model: user, class: "contents") do |form| %>
    <%= render "shared/form_errors", object: form.object %>

    <div class="flex flex-col justify-between mb-8 text-sm">
        <%= form.label :email, class: "mt-8 mb-1" %>
        <%= form.email_field :email, required: true, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md h-10 text-sm" %>

        <%= form.label :password, class: "mt-8 mb-1" %>
        <%= form.password_field :password, required: true, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md h-10 text-sm" %>

        <%= form.label :password_confirmation, class: "mt-8 mb-1" %>
        <%= form.password_field :password_confirmation, required: true, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md h-10 text-sm" %>
    </div>

    <%= form.submit "Sign Up", class: "rounded-lg py-2 px-4 bg-blue-600 text-white inline-block font-medium cursor-pointer text-xs" %>
<% end %>
