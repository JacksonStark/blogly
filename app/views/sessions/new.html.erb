<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Login</h1>

    <%= form_with(url: login_path, scope: :user) do |form| %>
        <div class="flex flex-col justify-between mb-8 text-sm">
            <%= form.label :email, class: "mt-8 mb-1" %>
            <%= form.email_field :email, required: true, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md h-10 text-sm" %>

            <%= form.label :password, class: "mt-8 mb-1" %>
            <%= form.password_field :password, required: true, class: "block w-full px-4 py-2 mt-2 text-gray-700 border border-gray-200 rounded-md h-10 text-sm" %>
        </div>
        <%= form.submit "Sign In", class: "rounded-lg py-2 px-4 bg-blue-600 text-white inline-block font-medium cursor-pointer text-xs" %>
    <% end %>
</div>